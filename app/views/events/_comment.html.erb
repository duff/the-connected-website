<% content_tag_for(:li, event, :class => "commentCreated") do %>
	<% if !@user %> <div class="author">
	    <%= link_to_avatar_for(event.user, :tiny) %>
	</div>
	<% end %>
	<div class="eventBody">
	  <p class="details">
	     <% if !@user %><%= link_to_user(event.user) %><%end%> commented on <%= link_to(h(event.detail.post.title), event.detail.post) %> 
	    <span class="time"><%= time_ago_in_words(event.created_at) %> ago.</span>
	  </p>
	
	  <div class="commentBody">
      <%= event.detail.body %>
    </div>
  
	 </div> 
<% end %>