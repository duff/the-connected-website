<% content_tag_for(:li, event, :class => "commentCreated") do %>
	<div class="author">
	    <%= link_to_avatar_for(event.user, :tiny) %>
	</div>
	<div class="eventBody">
	  <p class="details">
			<%= link_to_user(event.user) %>
			<% if event.detail %>
				commented on <%= link_to(h(event.detail.post.title), event.detail.post) %> 
		    <span class="time"><%= time_ago_in_words(event.created_at) %> ago.</span>
			<% else %>
				made a comment which has since been deleted.
			<% end %>
	  </p>
	
		<% if event.detail %>
		  <p class="commentBody">
	      <%= event.detail.body %>
	    </p>
  	<% end %>
	</div> 
<% end %>