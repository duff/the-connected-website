<% content_tag_for(:li, event, :class => "eventPostAddedToTopic") do %>
	<% if !@user %> 
    <div class="author">
	    <%= link_to_avatar_for(event.user, :tiny) %>
		</div>
	<% end %>
	<div class="eventBody">
	  <p class="details">
	    <% if !@user %><%= link_to_user(event.user) %><% end %> added <%= link_to(h(event.detail.post.title), event.detail.post) %> 
			to the topic <%= link_to event.detail.topic, event.detail.topic %>  
	    <span class="time"><%= time_ago_in_words(event.created_at) %> ago.</span>
	  </p>
	  
	 </div> 
<% end %>