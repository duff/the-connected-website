<% content_tag_for(:li, event, :class => "eventPostChanged") do %>
	<% unless @hide_user_in_events %>
		<div class="author">
		    <%= link_to_avatar_for(event.user, :tiny) %>
		</div>
	<% end %>
	<div class="eventBody">
	  <p class="details">
	    <% unless @hide_user_in_events %>
	    	<%= link_to_user(event.user) %> 
			<% end %>
			 
			<% if event.detail.post %>
				edited <%= link_to(h(event.detail.post.title), event.detail.post) %> 
			<% else %>
				edited a post which has since been deleted
			<% end %>
	    <span class="time"><%= time_ago_in_words(event.created_at) %> ago.</span>
	  </p>
	  
	 </div> 
<% end %>