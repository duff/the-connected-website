<% content_tag_for(:li, event, :class => "eventPostRemovedFromTag") do %>
	<div class="author">
	    <%= link_to_avatar_for(event.user, :tiny) %>
	</div>
	<div class="eventBody">
	  <p class="details">
	    <%= link_to_user(event.user) %> removed <%= link_to(h(event.detail.post.title), event.detail.post) %> 
			from the tag <%= link_to event.detail.tag, event.detail.tag %>  
	    <span class="time"><%= time_ago_in_words(event.created_at) %> ago.</span>
	  </p>
	  
	 </div> 
<% end %>