<h2>People</h2>

<% for user in @users %>
	<div id="authorBlock">
		<h2><%= link_to_user(user) %></h2>
		<p class="avatar">
	    <%= link_to_avatar_for(user, :medium) %>
	  </p>
		<% unless user.profile_text.blank? %>
			<p><%= truncate(user.profile_text, 200) %> <%= link_to("More about #{user}", user_url(user)) %></p>
		<% end %>
		<div class="clearThis"> </div>
	</div>
<% end %>
