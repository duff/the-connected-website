<% @current_tab = :blog %>
<h1><%= @page_title = "TCR Blog" %></h1>
		
<div id="sidebar">
  <div id="missionStatement">
    <h2>Who is blogging?</h2>
		<p>
		  The blog features selected postings from the <%= link_to "Discussion section", posts_url %>. Everybody can <%= link_to "contribute", new_post_url %>!
    </p>
  </div>
	
	
	<div id="subscribe">
	  <h2>Subscribe</h2>
	  <p><a href="<%= formatted_posts_url(:format => :rss) %>" class="rss">Subcribe to all postings</a></p>
	  <p><a href="<%= formatted_featured_posts_url(:format => :rss) %>" class="rss">Subcribe to featured postings</a></p>
	</div>
	
	<div>
	  <p class="featuredSelet">You are browsing featured postings. <%= link_to "Show all postings?", posts_url %></p>
	</div>
	
</div>

<div id="main">
	<%= render :partial => 'posts/post_list' %>
</div>

<%= clear_this %>