<% @page_title = "Content" %>
<% @current_tab = :posts %>

<div id="sidebar">
	<%= link_to "New Post", new_post_url %>
</div>
  <div id="main">
		<h1>All Posts</h1>
		<div class="posts">
			<% for post in @posts %>
				<div class="post">
					<p class="avatar">
						<%= link_to_avatar_for(post.user, :medium) %>
						<span class="author"><%= link_to_user(post.user) %>
					</p>
					<div class="postContent">
						<h2><%= link_to post, post %> <span class="date"><%= time_ago_in_words(post.created_at) %> ago</span></h2>
						<p><%= post.brief %></p>
					</div>
				</div>
			<% end %>
		</div>
  </div>
<div class="clearThis"> </div>