<h1><%= @page_title = @initial_topic ? "Create a new post in topic '#{@initial_topic}'" : "Create a new post" %></h1>

<div id="sidebar">

</div>
<div id="main">

<% form_for @post do | f | %>
  <%= f.error_messages %>
  
	<p>
	  <%= f.label :title, "Title for this post" %>
    <%= f.text_field :title, :class => "largeInput" %>
  </p>

	<p>
	  <%= f.label :detail, "Post text" %>
    <%= f.text_area :detail, :class => "mceEditor" %>
  </p>

	<%= hidden_field_tag(:topic, @initial_topic.id) if @initial_topic  %>

  <p class="submitBlock">
    <%= submit_tag  'Create new post', :disable_with => "Saving..." %> or <%= link_to "Cancel", @post.new_record? ? posts_url : @post %>
  </p> 

<% end %>
</div>

<%= clear_this %>