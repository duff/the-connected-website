
<div id="sidebar">
	<h2 class="author">The author: <%= link_to_user(@post.user) %></h2>
	<p class="avatar">
    <%= link_to_avatar_for(@post.user, :large) %>
  </p>
</div>

<div id="main">
<h1><%= @post %></h1>
<p class="date">Posted <%= time_ago_in_words(@post.created_at) %> ago.</p>

	<div class="postBody">
		<%= detail_format(@post.detail) %>
	</div>
	

  
	<div id="comments">
	<h2>Comments</h2>
		<% for comment in @post.comments %>
				<div class="comment">
					<p class="avatar">
						<%= link_to_avatar_for(comment.user, :medium) %>
						<span class="author"><%= link_to_user(comment.user) %>
					</p>
					<div class="postContent">
						<%= detail_format(comment.body) %>
					</div>
				</div>
		<% end %>
	</div>
		<%= render :partial => 'posts/comment_form' %>
</div>

<div class="clearThis"> </div>