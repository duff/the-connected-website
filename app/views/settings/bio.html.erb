		<div id="settings">

<h1><%= @page_title = "Your Settings"  %></h1>

		<div id="sidebar">
		  
			<ul class="settings">
				<li class="current"><%= link_to "Bio", bio_settings_url %></li>
				<li><%= link_to "Picture", picture_settings_url %></li>
				<li><%= link_to "User name and email", username_email_settings_url %></li>
			</ul>
		</div>
		
<div id="main">		
		<%= error_messages_for(:user) %>

				<h2>Your Bio</h2>
			  <% form_for @user, :url => settings_url do | f | %>

			    <p>
			      <%= f.label :home_page %>
			      <%= f.text_field :home_page, :class => "largeInput" %>
			    </p>
			
			    <p>
			      <%= f.label :profile_text %>
			      <%= f.text_area :profile_text, :class => "largeInput" %>
			    </p>

			    <p class="submitBlock">
			      <%= submit_tag "Update your account" %>
			    </p>
			  <% end %>

</div>
		</div>
<div class="clearThis"> </div>
