


<div id="sidebar">
	<%= link_to "Start a new posting in \"#{@topic}\"", new_post_url, :id=>"newContent" %>
</div>

<div id="main">

	
	<div id="topicDescription">
		<h1><%= @page_title = @topic %> <span class="count"><%= pluralize(@topic.posts.count, "article") %></span></h1>
	
	

		<% if @topic.description.blank?%>
		   <p>This topic has no description, yet.</p>
		<% else  %>
		   <%= detail_format(@topic.description) %>
		<% end %>
		
		<p class="tinyOption"><%= link_to "Edit this topic?", edit_topic_url  %><p>

		
	</div>
	




	<div class="posts">
		<% for post in @topic.posts %>
			<div class="post">
				<p class="avatar">
					<%= link_to_avatar_for(post.user, :medium) %>
					<span class="author"><%= link_to_user(post.user) %>
				</p>
				<div class="postContent">
					<h2><%= link_to post, post %> <span class="date"><%= time_ago_in_words(post.created_at) %> ago</span></h2>
					<p><%= post.brief %></p>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="clearThis"> </div>