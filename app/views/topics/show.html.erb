
<h1><%= @page_title = @topic %></h1>
<%= h(@topic.description) %>		

<div id="sidebar">
	<%= link_to "Start a new posting in \"#{@topic}\"", new_post_url, :id=>"newContent" %>
	<% if @topic.description.blank?%>
	   <%= link_to "Add description for topic", edit_topic_url  %>
   <% else  %>
	   <%= link_to "Edit description?", edit_topic_url  %>
   <% end %>
</div>

<div id="main">
	<div class="posts">
		<% for post in @topic.posts %>
			<div class="post">
				<p class="avatar">
					<%= link_to_avatar_for(post.user, :medium) %>
					<span class="author"><%= link_to_user(post.user) %>
				</p>
				<div class="postContent">
					<h2><%= link_to post, post %> <span class="date"><%= time_ago_in_words(post.created_at) %> ago</span></h2>
					<p><%= post.brief %></p>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="clearThis"> </div>