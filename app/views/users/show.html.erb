<% @page_title = "#{@user.possessive_to_s} Profile" %>
<div id="profile">
	<div id="sidebar">


	</div>
	<div id="main">
		
		
		<p class="avatar">
	    <%= avatar_for(@user, :large) %>
			<% if logged_in? && @user==current_user%>
				 <% if !@user.avatar %>
	    		<%= link_to('Upload a picture?', picture_settings_url) %>
				<% else %>
					<%= link_to('Change picture?', picture_settings_url) %>
				<% end %>
			<% end %>
	  </p>

	    
		<div id="profileDetails">
			<h1><%=h @user %></h1>
		

			<% unless  @user.profile_text.blank? %>
				<div id="bio">
					<%= detail_format(@user.profile_text) %>
				</div>
			<% end %>
			<% if logged_in? && @user==current_user && @user.profile_text.blank? %>
					<p>Introduce yourself and <%= link_to('add a bio', bio_settings_url) %></p>
			<% end %>
            <% if logged_in? && @user==current_user && !@user.profile_text.blank? %>
                  <p class="tinyOption"><%= link_to('Edit your bio', bio_settings_url) %></p>
            <% end %>

		</div>
		<div class="clearThis"> </div>
	
            <% unless  @user.home_page.blank? %>
                    <p class="homepage"><%=h @user %> is at home at <%= link_to @user.home_page, @user.home_page, :rel => "me" %>.</p>
            <% end %>
	
	

		<div class="posts">
			<h2><%=h @user.possessive_to_s %> posts</h2>
			<% for post in @user.posts %>
				<p><%= link_to post, post %></p>
			<% end %>
		</div>
		      

	</div>
	<div class="clearThis"> </div>
</div>			

